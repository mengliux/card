/**index.wxss**/
.card {
  margin: 10px;
  position: relative;
}

.bg {
  width: 100%;
  border-radius: 5px;
  box-shadow: 0 0 5px #5F687E;
}

.logo {
  width: 80px;
  height: 80px;
  position: absolute;
  top: 10px;
  right: 20px;
}

.info {
  position: absolute;
  left: 30px;
  bottom: 30px;
  font-size: 16px;
  color: #1f2127;
}

.name {
  font-weight: bold;
}
.desc {
  margin-bottom: 10px;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
